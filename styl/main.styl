@-webkit-keyframes movecolumns {
	0% {transform: translate3d(0, 0%, 0);}
	100% {transform: translate3d(0, -100%, 0);}
}

::-webkit-scrollbar
	display none

body
	margin 0
	padding 0
	background-color black

html, body, .container, .column
	height 1360px

.container
	width 4638px
	position relative
	overflow hidden
	// outline 1px solid red

.item
	height 75px
	background-color grey
	position relative
	background-position 50% 50%
	background-repeat repeat-y
	background-size 100%

.item
	animation movecolumns 2s linear infinite

.column
	transform scaleX(2)
	transform-origin 0 0
	float left

