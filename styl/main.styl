::-webkit-scrollbar
	display none

html, body, .column
	height 100%

.item
	font-size 48px
	text-align center
	height 35px
	background-color white
	background-position 50% 50%
	background-repeat repeat-y
	background-size 100%

.column
	overflow scroll
	float left
	margin-right 50px

.one
	width 200px
	.item
		background-image url('../img/01.png')

.two
	width 175px
	.item
		background-image url('../img/02.png')
		transform rotate(180deg)

.three
	width 170px
	.item
		background-image url('../img/03.png')

.four
	width 130px
	.item
		background-image url('../img/04.png')

.five
	width 270px
	.item
		background-image url('../img/05.png')