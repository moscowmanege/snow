@-webkit-keyframes movecolumns {
	0% {transform: translate(0, 0%);}
	100% {transform: translate(0, -100%);}
}

@-webkit-keyframes movenew {
	0% {
		margin-top: 80%;
		background-position: 0 0;
	}
	100% {
		margin-top: -80%;
		background-position: 0 -200px;
	}
}

body
	margin 0
	padding 0
	background-color black

html, body, .container, .column
	height 1920px

.new
	width 600px
	height 100%
	position absolute
	&.left
		left 0
	&.right
		right 0
	.text
		animation movenew 18s linear infinite
		width 400px
		height 60px
		margin-bottom 50px
		background-image url('../img/text.png')
		background-position 50%
		background-repeat no-repeat
		margin-left 60px
		&:nth-child(2n)
			margin-left 110px


.container
	width 6480px
	position relative

.item
	height 75px
	background-color grey
	position relative
	background-position 50% 50%
	background-repeat repeat-y
	background-size 100%

.item
	animation movecolumns 2s linear infinite

.column
	transform scaleX(2)
	transform-origin 0 0
	overflow hidden
	float left
	margin-right 650px
	&:last-child
		margin-right 0px

