body
	margin 0
	padding 0

html, body, .column
	height 100%

.item
	height 35px
	background-color grey
	position relative
	.letter
		width 100%
		height 100%
		position absolute
		background-position 50% 50%
		background-repeat repeat-y
		background-size 100%

.column
	overflow hidden
	float left
	margin-right 50px



.first
	animation movecolumns 4s linear infinite

